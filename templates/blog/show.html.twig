{% extends 'base.html.twig' %}

{% block title %}
    Détails de l'article
{% endblock %}

{% block body %}

    <h1 class="display-4 text-center my-5">Détails de l'article {{ articleTwig.id }} </h1>

    <div class="album py-5 bg-light">

        <div class="row">

          <div class="col-md-8 mx-auto">
            <div class="card mb-4 shadow-sm">
              <img src="{{ articleTwig.image | replace({'200/300' : '1000/300'}) }}" alt="{{ articleTwig.title }}">

              <div class="card-body">
                <h4 class="text-center">{{ articleTwig.title }}</h4><hr>
                <p class="card-text"> {{ articleTwig.content | striptags }}</p>
                <div class="d-flex justify-content-end align-items-center">
                  <small class="text-muted"> Posté le : {{ articleTwig.createAt | date("d/m/Y") }} à {{ articleTwig.createAt | date("H:i:s")}} </small>
                </div>
              </div>
            </div>
          </div>

        </div>
    </div>

{% endblock %}